{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "sourceMap": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}